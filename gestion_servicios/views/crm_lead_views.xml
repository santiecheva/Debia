<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id = 'tracking_service_crm_lead_form' model = 'ir.ui.view'>
	<field name='name'>Tracking Service crm_lead form </field>
	<field name='model'>crm.lead</field>
	<field name='inherit_id' ref='crm.crm_case_form_view_oppor'/>
	<field name='arch' type='xml'>
		<field name='phone' position='after'>
				<field name = 'assistant_id' />
				<field name = 'insurance_id' placeholder='ejm: sura'/>
				<field name = 'id'/>
		</field>
		<field name = 'date_deadline' position = 'after'>
				<field name = 'placa'/>
				<field name = 'poliza'/>
				<field name = 'factura'/>
				<field name = 'case'/>
		</field>
		<notebook colspan = '4'>
			<page string = 'Relatos'>
				<h1>Relato del Lesionado</h1>
				<field name = 'relato_lesionado'/>
				<h1> Relato Furips</h1>
				<field name = 'relato_furips'/>
			</page>
		</notebook>
	</field>
</record>

</odoo>