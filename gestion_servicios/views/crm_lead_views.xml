<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id = 'tracking_service_crm_lead_form' model = 'ir.ui.view'>
	<field name='name'>Tracking Service crm_lead form </field>
	<field name='model'>crm.lead</field>
	<field name='inherit_id' ref='crm.crm_case_form_view_oppor'/>
	<field name='arch' type='xml'>
		<field name='phone' position='after'>
				<field name = 'assistant_id' />
				<field name = 'insurance_id' placeholder='ejm: sura'/>
				<field name = 'id'/>
				<field name = 'direccion'/>
				<field name = 'heridos'/>
				<field name = 'placa'/>
				<field name = 'fecha_ingreso'/>
				<field name = 'tomador_id'/>
				<field name = 'reclamante_id'/>
		</field>
		<field name = 'date_deadline' position = 'after'>
				<field name = 'poliza'/>
				<field name = 'factura'/>
				<field name = 'valor'/>
				<field name = 'case_id'/>
				<field name = 'fecha'/>
				<field name = 'fecha_egreso'/>
				<field name = 'lesionado_id'/>
				<field name = 'estados'/>
				<field name = 'motivo_estado' attrs="{'invisible': [('estados', '=', 'null')]}"/>
		</field>
		<notebook colspan = '4'>
			<page string = 'Relatos/Informes'>
				<h2 style='color:SlateBlue;'>Relato del Lesionado</h2>
				<field name = 'relato_lesionado'/>
				<h2 style='color:SlateBlue;'> Relato Furips</h2>
				<field name = 'relato_furips'/>
				<h2 style='color:SlateBlue;'>Lesiones</h2>
				<field name = 'lesion'/>
				<h2 style='color:SlateBlue;'>Informe MÃ©dico</h2>
				<field name = 'informe_medico'/>
				<h2 style='color:SlateBlue;'>Tratamiento</h2>
				<field name = 'atencion'/>
				<h2 style='color:SlateBlue;'>Traslados</h2>
				<field name = 'traslado'/>
			</page>
			<page string = 'Observaciones'>
				<field name = 'observaciones'/>
			</page>
		</notebook>
	</field>
</record>

</odoo>